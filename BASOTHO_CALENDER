#		case 1: cout<<"Mantaha"<<endl;
#		 break;
#		case 2: cout<<"Labobeli"<<endl;
#		 break;
#		case 3: cout<<"Laboraro"<<endl;
#		 break;
#		case 4: cout<<"Labone"<<endl;
#		 break;
